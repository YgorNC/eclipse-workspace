package entities;

public class ImportedProduct extends Product {

	private Double customFee;
	
	public ImportedProduct() {
		super();
	}
	
	public ImportedProduct(String name, Double price, String priceTag, Double customFee) {
		super(name, price, priceTag);
		this.customFee = customFee;
	}

	public Double getCustomFee() {
		return customFee;
	}

	public void setCustomFee(Double customFee) {
		this.customFee = customFee;
	}
	
	@Override
	public double totalPrice() {
		return super.totalPrice() + customFee;
	}
	
	@Override
	public String toString() {
		return getName() + " $ " + String.format("%.2f", totalPrice()) + " (Customs fee: $ "
				+ String.format("%.2f", customFee) + ")";
	}
}
